    <script src="plugins/jquery/jquery.min.js"></script>
  </head>
  <style>
    .main-footer{margin-top: 40%;} .card header{ position: fixed; } .row{width:
    100%;}

  </style>
  <body class="hold-transition sidebar-mini">
    <div class="wrapper">

      <!-- Navbar -->
      <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button">
              <i class="fas fa-bars"></i></a>
          </li>
          <li class="nav-item d-none d-sm-inline-block">
            <a href="/profile" class="nav-link">Home</a>
          </li>

          <li class="nav-item d-none d-sm-inline-block">
            <a id="chart" href="/chart" class="nav-link">Chart</a>
          </li>
        </ul>

      </nav>
      <!-- Main Sidebar Container -->
      <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="/profile" class="brand-link">

          <span class="brand-text font-weight-light">Paradise Vacations</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
          <!-- Sidebar user panel (optional) -->
          <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="info">

              <div style="color:azure">Hello {{user.first_name}}</div>
              <br />
              <a href="/logout">(Logout)</a>
            </div>
          </div>
          <!-- Sidebar Menu -->
          <nav class="mt-2">
            <ul
              class="nav nav-pills nav-sidebar flex-column"
              data-widget="treeview"
              role="menu"
              data-accordion="false"
            >
              <li class="nav-item menu-open">

                <ul class="nav nav-treeview">
                  <li id="addVac" class="nav-item">
                    <a href="#" class="nav-link active">
                      <p>Add Vacation</p>

                    </a>
                  </li>

                </ul>
              </li>

            </ul>
          </nav>
        </div>
        <!-- /.sidebar -->
      </aside>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">

            </div><!-- /.row -->
          </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->

        <div class="container-fluid">
          <div class="row"> <div>{{{body}}}</div></div>
          <!-- /.row -->
        </div><!-- /.container-fluid -->

        <!-- /.content -->
      </div>
      <!-- /.content-wrapper -->

      <!-- Control Sidebar -->
      <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
        <div class="p-3">
          <h5>Title</h5>
          <p>Sidebar content</p>
        </div>
      </aside>

      <footer class="main-footer">

        <div class="float-right d-none d-sm-inline">
          Project 3
        </div>
        <strong>Paradise Vacations</strong>

      </footer>
    </div>

    <div id="vacation" class="w3-modal" style="display: none;">
      <div class="w3-modal-content" style="width: 300px; height:300px;">
        <div class="w3-container">

          <form>

            <h2 class="addv" style="text-align: center;">Add Vacation</h2>

            <br /><br />

            <input type="text" placeholder="description" id="description" />
            <br />
            <input type="text" placeholder="destination" id="destination" />
            <br />
            <input type="date" placeholder="start" id="start" />
            <span>to</span><br />
            <input type="date" placeholder="end" id="end" />
            <br /><input type="number" placeholder="Price" id="price" /><br />
            <button id="addBtn">Add</button>
            <button
              onclick="document.getElementById('vacation').style.display='none'"
            >Cancel</button>
          </form>
        </div>
      </div>
    </div>

    <script src="plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="dist/js/adminlte.min.js"></script>
    <link rel="stylesheet" href="plugins/daterangepicker/daterangepicker.css" />
    <script src="plugins/daterangepicker/daterangepicker.js"></script>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <script>

      $(document).ready(()=>{ $("#cancelBtn").on('click',()=>{
      $("#vacation").css('dislay','none') }) $("#cancelModal").on('click',()=>{
      $("#editModal").css('dislay','none') }) $("#addVac").on('click',()=>{
      $("#vacation").css('display','block'); }) $("#addBtn").on('click',()=>{
      let desc= $("#description").val(); let dest= $("#destination").val(); let
      start=$("#start").val(); let end=$("#end").val(); let
      price=$("#price").val(); $.ajax({
      url:'https://vacpar.herokuapp.com/add-vacation', method:'post', data:{
      description: desc, destintaion:dest, startDate:start, endDate:end,
      price:price }, success:function(){ document.location.href='/admin'; } })
      }) })

    </script>
  </body>
</html>